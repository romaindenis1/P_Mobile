<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Read4All.MainPage">
        <VerticalStackLayout Padding="20">

            <Label Text="Read4All"
               FontSize="28"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

            <HorizontalStackLayout Spacing="10" Margin="10,20,10,10">
                <Picker x:Name="FilterPicker"
                    Title="Filter by"
                    WidthRequest="120">
                    <Picker.Items>
                        <x:String>Date</x:String>
                        <x:String>Tag</x:String>
                    </Picker.Items>
                </Picker>
            </HorizontalStackLayout>

        <ScrollView>
            <VerticalStackLayout Spacing="10">
                <Frame Padding="10" BackgroundColor="LightGray">
                    <HorizontalStackLayout>
                        <Image
                            Source="xioajie.jpeg" WidthRequest="50"
                                 HeightRequest="50"
                                 BackgroundColor="DarkGray"/>

                        <VerticalStackLayout Padding="10" HorizontalOptions="FillAndExpand">
                            <Label Text="Titre 1"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                                   FontSize="12"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>

                        <Frame BackgroundColor="DarkGray"
                               Padding="5"
                               CornerRadius="5">
                            <Label Text="Tag"
                                   FontSize="10"
                                   TextColor="White"/>
                        </Frame>
                    </HorizontalStackLayout>
                </Frame>


                <Frame Padding="10" BackgroundColor="LightGray">
                    <HorizontalStackLayout>
                        <BoxView WidthRequest="50"
                                 HeightRequest="50"
                                 BackgroundColor="DarkGray"/>

                        <VerticalStackLayout Padding="10" HorizontalOptions="FillAndExpand">
                            <Label Text="Titre 2"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                                   FontSize="12"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>

                        <Frame BackgroundColor="DarkGray"
                               Padding="5"
                               CornerRadius="5">
                            <Label Text="Tag"
                                   FontSize="10"
                                   TextColor="White"/>
                        </Frame>
                    </HorizontalStackLayout>
                </Frame>

                <Frame Padding="10" BackgroundColor="LightGray">
                    <HorizontalStackLayout>
                        <BoxView WidthRequest="50"
                                 HeightRequest="50"
                                 BackgroundColor="DarkGray"/>

                        <VerticalStackLayout Padding="10" HorizontalOptions="FillAndExpand">
                            <Label Text="Titre 3"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                                   FontSize="12"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>

                        <Frame BackgroundColor="DarkGray"
                               Padding="5"
                               CornerRadius="5">
                            <Label Text="Tag"
                                   FontSize="10"
                                   TextColor="White"/>
                        </Frame>
                    </HorizontalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
    </ContentPage>
