<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Read4All.MainPage">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">
        <StackLayout Grid.Row="0" Padding="10" BackgroundColor="#f8f9fa">
            <Label Text="Read4All"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
        </StackLayout>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,10">
            <Picker x:Name="TagFilter"
                    Title="Filter by Tag"
                    SelectedIndexChanged="OnTagFilterChanged"
                    HorizontalOptions="Fill"/>
            
            <Button Grid.Column="1"
                    Text="Clear"
                    Clicked="OnClearFilterClicked"
                    Margin="10,0,0,0"/>
        </Grid>

        <RefreshView Grid.Row="2" x:Name="RefreshView">
            <CollectionView x:Name="BooksCollection"
                          SelectionMode="Single"
                          SelectionChanged="OnBookSelected"
                          EmptyView="No books available.">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" 
                               Padding="15" 
                               BorderColor="#dee2e6"
                               MaximumWidthRequest="600"
                               HorizontalOptions="Center">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=OpenBookDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <StackLayout Grid.Row="0" Grid.Column="0">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#212529"/>
                                    <Label Text="{Binding AnneeEdition, StringFormat='Published in {0}'}"
                                           FontSize="14"
                                           TextColor="#6c757d"/>
                                </StackLayout>
                                
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding NbPage, StringFormat='{0} pages'}"
                                       FontSize="14"
                                       TextColor="#6c757d"
                                       VerticalOptions="Center"/>

                                <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Orientation="Horizontal" Spacing="10">
                                    <Label Text="{Binding Auteur.Nom}"
                                           FontSize="16"
                                           TextColor="#495057"/>
                                    <Label Text="â€¢"
                                           FontSize="16"
                                           TextColor="#6c757d"/>
                                    <Label Text="{Binding Categorie.Libelle, Mode=TwoWay}"
                                           FontSize="16"
                                           TextColor="#495057"/>
                                </StackLayout>

                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Resume}"
                                       FontSize="14"
                                       TextColor="#495057"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="3"
                                       Margin="0,10,0,0"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator Grid.RowSpan="3" 
                          IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=IsBusy}"
                          IsRunning="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Color="#007bff"/>
    </Grid>

</ContentPage>
